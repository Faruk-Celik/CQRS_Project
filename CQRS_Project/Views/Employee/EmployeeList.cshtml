@model List<CQRS_Project.MediatorPattern.Results.GetEmployeeQueryResult>
@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<div class="container">
    <br /><br />
    <div class="alert alert-primary">Staff Table</div>
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Staff Name Surname</th>
            <th>Salary</th>          
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeID</td>
                <td>@item.Name @item.Surname</td>
                <td>@item.Salary</td>
                <td><a href="/Employee/UpdateEmployee/@item.EmployeeID" class="btn btn-success">Update</a></td>
                <td><a href="/Employee/RemoveEmployee/@item.EmployeeID" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </table>
    <a href="/Employee/CreateEmployee" class="btn btn-primary">Add New Employee</a>
</div>
