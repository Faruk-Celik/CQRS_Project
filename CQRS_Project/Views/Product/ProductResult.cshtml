@model List<CQRS_Project.CQRS.Results.GetProductQueryResult>

@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<div class="container">
    <br /><br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Update</a></td>
                <td><a href="/Product/RemoveProduct/@item.ProductID" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </table>
    <a href="/Product/CreateProduct/" class="btn btn-primary">Add New Product</a>
</div>
