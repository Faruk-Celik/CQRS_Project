@model CreateProductCommand
@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<form method="post">

    <div class="container">
        <br />
        <label>Product Name</label>
        <input type="text" asp-for="ProductName" class="form-control" />
